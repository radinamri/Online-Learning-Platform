{# templates/course/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Course Details{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>{{ course.title }}</h1>
        <p><strong>Description:</strong> {{ course.description }}</p>
        <p><strong>Start Date:</strong> {{ course.startDate|date('Y-m-d') }}</p>
        <p><strong>End Date:</strong> {{ course.endDate|date('Y-m-d') }}</p>

        <a href="{{ path('app_course_edit', {'id': course.id}) }}" class="btn btn-warning">Edit</a>
        <form action="{{ path('app_course_delete', {'id': course.id}) }}" method="post" style="display:inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
            <button class="btn btn-danger">Delete</button>
        </form>
        <a href="{{ path('app_course') }}" class="btn btn-secondary">Back to Courses</a>
    </div>
{% endblock %}